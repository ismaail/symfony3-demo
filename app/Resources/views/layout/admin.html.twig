<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <title>{% block title %}{% endblock %} - Symfony 3 Demo</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    <link rel="stylesheet" href="{{ asset('vendor/bootstrap-css/css/bootstrap.min.css') }}">
</head>
<body>
    <div class="container">
        {% for flashMessage in app.session.flashbag.get('error') %}
            <div class="alert col-xs-12 alert-danger">{{ flashMessage }}</div>
        {% endfor %}
        {% for flashMessage in app.session.flashbag.get('success') %}
            <div class="alert colxs-md-12 alert-success">{{ flashMessage }}</div>
        {% endfor %}
        {% block body %}{% endblock %}
    </div>
    <script src="{{ asset('vendor/jquery/jquery.min.js') }}"></script>
    <script src="{{ asset('vendor/bootstrap-css/js/bootstrap.min.js') }}"></script>
    {% block javascripts %}{% endblock %}
</body>
</html>